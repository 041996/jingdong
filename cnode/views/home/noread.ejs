                                        <% }else{ %> 
                                            <span class="topiclist-tab"><%= topic.cid.cateName %></span>
                                        <% } %>
                                    <%} %>
                                    
                                    <a class="topic_title" title="<%= topic.tName %>" href="/topic/<%= topic._id %>"> <%= topic.tName %> </a>
                                </div>
                            </div>
                        <%}%>
                            
                <% }) %>
            </div>
        </div>
    </div>
</div>

