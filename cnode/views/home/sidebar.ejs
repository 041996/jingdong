<div id="sidebar">
    <div class="panel">
         <!-- 设置登录或个人信息 -->
        <% if(user){ %> 
            <div class="panel">
                <div class="header">
                    <span class="col_fade">个人信息</span>
                </div>
                <div class="inner">
                    <div class="user_card">
                        <div>
                            <!-- 这是头像 -->
                            <a class="user_avatar" href="/user/ucenter">
                                <!-- 输出用户头像 -->
                                <% if(user.upic){ %> 
                                    <img src="/uploads/<%= user.upic %>" title="souying">
                                <% }else{ %> 
                                    <img src="/uploads/default.png" title="xdlnode">
                                <% } %>
                                
                            </a>
                            <span class="user_name">
                                <!-- 用户 账户或者是昵称 -->
                                <a class="dark" href="/user/souying"><%= user.uname %></a>
                            </span>
                            <div class="board clearfix">
                                <div class="floor">
                                    <span class="big">积分: <%= user.gold %></span>
                                </div>
                            </div>
                            <div class="space clearfix"></div>
                            <span class="signature">
                            “
                                    
                                    <%= user.des ||'这个家伙很懒，什么都没有留下....' %>
                                
                                ”
                            </span>
                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel">
                <div class="inner">
                    <a href="/topic/create" id="create_topic_btn">
                       <span class="span-success">发布话题</span>
                    </a>
                </div>
            </div>
        <% }else{ %> 
            <div class="inner">
                <p>CNode：Node.js专业中文社区</p>
                <div>
                    您可以
                    <a href="/user/login">登录</a>
                    或
                    <a href="/user/reg">注册</a>
                    , 也可以
                    <a href="/auth/github">
                    <span class="span-info"> 通过 GitHub 登录 </span>
                    </a>
                </div>      
            </div>
        <% } %>
    </div>
    <div class="panel">
        <div class="inner ads">
            <a class="banner sponsor_outlink" data-label="ucloud-banner" target="_blank" href="http://www.ucloud.cn/site/seo.html?utm_source=zanzhu&utm_campaign=cnodejs&utm_medium=display&utm_content=shengji&ytag=cnodejs_display">
                <img src="//dn-cnode.qbox.me/Fk7rRGVgB0XWgKjlpJs72VJty9Eu">
            </a>
            <div class="sep10"></div>
            <a class="banner sponsor_outlink" data-label="submail" target="_blank" href="http://submail.cn/sms?s=cnode">
                <img src="//dn-cnode.qbox.me/FixbBzsaHXlymE1_QRontEhsWR3O">
            </a>
            <div class="sep10"></div>
            <a class="banner sponsor_outlink" data-label="alinode" target="_blank" href="https://alinode.aliyun.com/?ref=cnode">
                <img src="//dn-cnode.qbox.me/Fn4D6BhOTz1IswvmzeZ1q7QW1ls_">
            </a>
        </div>
    </div>
    <div class="panel">
        <div class="header">
            <span class="col_fade">无人回复的话题</span>
        </div>
        <div class="inner">
            <ul class="unstyled">
                <% noData.forEach(function(noData){ %> 
                    <li>
                        <div>
                            <a class="dark topic_title" title="<%= noData.tName %>" href="/topic/<%= noData._id %>"><%= noData.tName %></a>
                        </div>
                    </li>
                <% }) %>
                    
                
            </ul>
        </div>
    </div>
    <div class="panel">
        <div class="header">
            <span class="col_fade">积分榜</span>
            <a class="dark" href="/users/top100">TOP 100 >></a>
        </div>
        <div class="inner">
            <ol>
                <%  userData.forEach(function(user){ %> 
                    <li>
                        <span class="top_score"><%= user.gold %></span>
                        <span class="user_name">
                        <a href="/user/i5ting"><%= user.uname %></a>
                        </span>
                    </li>
                <% }) %>
                    
            </ol>
        </div>
    </div>
    <div class="panel">
        <div class="header">
            <span class="col_fade">友情社区</span>
            <a href="/user/apply" id="create_topic_btn">
               <span class="span-success">申请</span>
            </a>
        </div>
        <div class="inner">
            <ol class="friendship-community">
                <% applyData.forEach(function(apply){ %> 
                    <% if(apply.isAggre==1){ %> 
                        <li>
                            <a target="_blank" href="<%= apply.url %>">
                                <img src="/uploads/<%= apply.upic %>" title="<%= apply.uname %>">
                            </a>
                        </li>
                        <div class="sep10"></div>
                    <% } %>
                        
                <% }) %>
                    
                
            </ol>
        </div>
    </div>
    
</div>