<!-- 加载头部 -->
<% include header %>

<div id="main">
    <% include sidebar %>
    <div id="content">
        <div class="panel">
            <div class="header">
                <ul class="breadcrumb">
                    <li><a href="/">主页</a><span class="divider">/</span></li>
                    <li class="active">设置</li>
                </ul>
            </div>
            <div class="inner">
                <% if(errMsg.length){ %>
                    <p class="alert alert-danger"><%= errMsg %></p>
                <% } %>
                <% if(sucMsg.length){ %> 
                    <div class="alert alert-success">
                        <%= sucMsg %>
                    </div>

                <% } %>
                <form id="setting_form" class="form-horizontal" action="/user/setting" method="post" enctype="multipart/form-data">
                    <div class="control-group">
                        <label class="control-label" for="name">用户名</label>
                        <div class="controls">
                            <input class="input-xlarge readonly" id="name" name="uname" value="<%= user.uname %>" size="30" disabled value=" " type="text">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="email">电子邮件</label>
                        <div class="controls">
                            <input class="input-xlarge" id="email" name="email" size="30" value=" <%= user.email %>" type="text">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="userpic">用户头像</label>
                        <div class="controls">
                            <input class="input-xlarge" id="userpic" name="upic" size="30" type="file">
                        </div>
                    </div>
                   
                    <div class="control-group">
                        <label class="control-label" for="weibo">金币</label>
                        <div class="controls">
                            <input class="input-xlarge" disabled id="weibo" name="gold" size="30" value=" <%= user.gold %>" type="text">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="signature">个性签名</label>
                        <div class="controls">
                            <textarea class="input-xlarge" id="signature" name="des" size="30"><%= user.des %> </textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <input class="span-primary submit_btn" data-loading-text="保存中.." value="保存设置" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="panel">
            <div class="header">
              <span class="col_fade">更改密码</span>
            </div>
            <div class="inner">
                <% if(errMsgt.length){ %>
                    <p class="alert alert-danger"><%= errMsgt %></p>
                <% } %>
                <% if(suMsg.length){ %> 
                    <div class="alert alert-success">
                        <%= suMsg %>
                        <a href="/user/logout" class="info">退出</a>
                    </div>

                <% } %>
                <form id="change_pass_form" class="form-horizontal" action="/user/settingpwd" method="post">
                    <div class="control-group">
                        <label class="control-label" for="old_pass">请输入原密码</label>

                        <div class="controls">
                            <input class="input-xlarge" required id="old_pass" name="old_pwd" size="30" type="password">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="new_pwd">请输入新密码</label>

                        <div class="controls">
                            <input class="input-xlarge" required id="new_pwd" name="new_pwd" size="30" type="password">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="req_pwd">请确认新密码</label>

                        <div class="controls">
                            <input class="input-xlarge" required id="req_pwd" name="req_pwd" size="30" type="password">
                        </div>
                    </div>
                    <input id="action" name="action" value="change_password" type="hidden">
                    <input name="_csrf" value="7zRmRFar-Oj4cVPDmqBCxCgIEp0hL4o2L5eU" type="hidden">

                    <div class="form-actions">
                      <input class="span-primary submit_btn" data-loading-text="更改中.." value="更改密码" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="panel">
            <div class="header">
                <span class="col_fade">Access Token</span>
            </div>
            <div class="inner">
                <div>
                    <span>字符串：</span>ed5ccfe2-8018-4381-8ff2-f5493f27c062
                </div>
                <div>
                    <span>二维码：</span>
                    <span id="access-token-qrcode" title="ed5ccfe2-8018-4381-8ff2-f5493f27c062"><canvas width="200" height="200" style="display: none;"></canvas><img alt="Scan me!" style="display: block;" src="data:image/png;base64,"></span>
                </div>
            </div>
        </div>
    </div>
</div>
    
    


<!-- 公共底部部分 -->
<% include footer %>