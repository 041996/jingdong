<!-- 引入头部 -->
<% include ../header %>
    
<div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>

        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="#">首页</a>
            </li>

            <li>
                <a href="#">分类模块</a>
            </li>
            <li class="active">查看分类</li>
        </ul><!-- .breadcrumb -->

        <div class="nav-search" id="nav-search">
            <form class="form-search">
                <span class="input-icon">
                    <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                    <i class="icon-search nav-search-icon"></i>
                </span>
            </form>
        </div><!-- #nav-search -->
    </div>

    <div class="page-content">
        <div class="page-header">
            <h1>
                分类模块
                <small>
                    <i class="icon-double-angle-right"></i>
                    分类列表
                </small>
            </h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->

                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <% if(errMsg.length){ %>
                                <p class="alert alert-danger"><%= errMsg %></p>
                            <% } %>
                            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="center">
                                            <label>
                                                <input type="checkbox" class="ace" />
                                                <span class="lbl"></span>
                                            </label>
                                        </th>
                                        <th>分类</th>
                                        <th class="hidden-480">删除</th>
                                        <th class="hidden-480">Status</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <%cateData.forEach(function(cateData){%> 
                                         <tr>
                                            <td class="center">
                                                <label>
                                                    <input type="checkbox" class="ace" />
                                                    <span class="lbl"></span>
                                                </label>
                                            </td>

                                            <td>
                                               <%= cateData.cateName %>
                                            </td>
                                           <td>
                                                <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                                    
                                                    <!-- 删除 -拉黑 -->
                                                     
                                                     <a href="/admin/cateDelet?_id=<%= cateData._id %>" class="btn btn-xs btn-danger">
                                                        <span>删除</span>
                                                    
                                                    </a>
                                                                 
                                                </div>
                                            </td>
                                            

                                            <td>
                                                <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                                    
                                                    <!-- 编辑 -->
                                                    <a href="/admin/cateEdit?_id=<%= cateData._id %>" class="btn btn-xs btn-info">
                                                        <i class="icon-edit bigger-120"></i>
                                                    </a>                         
                                                </div>
                                            </td>
                                        </tr>
                                    <%})%>
                                       
                                  
                                </tbody>
                            </table>


                        </div><!-- /.table-responsive -->
                    </div><!-- /span -->
                </div><!-- /row -->
                

            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content -->
</div><!-- /.main-content -->

<!-- 引入底部 -->
<% include ../footer %>